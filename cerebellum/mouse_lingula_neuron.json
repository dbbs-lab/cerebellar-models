    "format": "scaffold.output.HDF5Formatter",
    "morphology_repository": "morphologies.hdf5",
    "file": "lingula.hdf5"
  },
  "network_architecture": {
    "simulation_volume_x": 410.0,
    "simulation_volume_z": 410.0,
    "store_kd_trees": true,
    "store_compound_kd_tree": true,
    "store_pf_kd_trees": true
  },
  "layers": {
    "granular_layer": {
      "thickness": 410.0,
      "stack": {
        "stack_id": 0,
        "position_in_stack": 0,
        "position": [0.0, 0.0, 0.0]
      }
    },
    "purkinje_layer": {
      "thickness": 30.0,
      "stack": {
        "stack_id": 0,
        "position_in_stack": 1
      }
    },
    "molecular_layer": {
      "thickness": 150.0,
      "stack": {
        "stack_id": 0,
        "position_in_stack": 2
      }
    }
  },
  "cell_types": {
    "granule_cell": {
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "granular_layer",
        "soma_radius": 2.5,
        "density": 3.9e-3,
        "distance_multiplier_min": 0.5,
        "distance_multiplier_max": 0.5
      },
      "morphology": {
        "class": "scaffold.morphologies.GranuleCellGeometry",
        "pf_height": 180,
        "pf_height_sd": 20,
        "pf_length": 3000,
        "pf_radius": 0.5,
        "dendrite_length": 40,
        "detailed_morphologies": {
          "names": ["GranuleCell"]
        }
      },
      "plotting": {
        "display_name": "granule cell",
        "color": "#E62214"
      }
    },
    "mossy_fibers": {
      "entity": true,
      "placement": {
        "class": "scaffold.placement.Entities",
        "layer": "granular_layer",
        "placement_relative_to": "glomerulus",
        "placement_count_ratio": 0.05
      }
    },
    "glomerulus": {
      "relay": true,
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "granular_layer",
        "soma_radius": 1.5,
        "density": 3e-4
      },
      "morphology": {
        "class": "scaffold.morphologies.NoGeometry"
      },
      "plotting": {
        "display_name": "glomerulus",
        "color": "#0E1030"
      }
    },
    "golgi_cell": {
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "granular_layer",
        "soma_radius": 8.0,
        "density": 9e-6
      },
      "morphology": {
        "class": "scaffold.morphologies.GolgiCellGeometry",
        "dendrite_radius": 50.0,
        "axon_x": 150.0,
        "axon_y": 150.0,
        "axon_z": 30.0,
        "detailed_morphologies": {
          "names": ["GolgiCell"]
        }
      },
      "plotting": {
        "display_name": "golgi cell",
        "color": "#332EBC"
      }
    },
    "purkinje_cell": {
      "placement": {
        "class": "scaffold.placement.ParallelArrayPlacement",
        "layer": "purkinje_layer",
        "soma_radius": 7.5,
        "planar_density": 0.0017,
        "extension_x": 130.0,
        "extension_z": 3.5,
        "angle": 70
      },
      "morphology": {
        "class": "scaffold.morphologies.PurkinjeCellGeometry",
        "detailed_morphologies": {
          "names": ["PurkinjeCell"]
        }
      },
      "plotting": {
        "display_name": "Purkinje cell",
        "color": "#0F8944"
      }
    },
    "stellate_cell": {
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "molecular_layer",
        "soma_radius": 4.0,
        "density": 0.5e-4,
        "y_restriction": [0.33, 1.00]
      },
      "morphology": {
        "class": "scaffold.morphologies.RadialGeometry",
        "dendrite_radius": 15.0,
        "detailed_morphologies": {
          "names": ["StellateCell"]
        }
      },
      "plotting": {
        "display_name": "Stellate cell",
        "color": "#FFC425"
      }
    },
    "basket_cell": {
      "placement": {
        "class": "scaffold.placement.ParticlePlacement",
        "layer": "molecular_layer",
        "soma_radius": 6.0,
        "density": 0.5e-4,
        "y_restriction": [0.00, 0.33]
      },
      "morphology": {
        "class": "scaffold.morphologies.RadialGeometry",
        "dendrite_radius": 15.0,
        "detailed_morphologies": {
          "names": ["BasketCell"]
        }
      },
      "plotting": {
        "display_name": "Basket cell",
        "color": "#F37735"
      }
    }
